{
    "name": "taskunifier-app",
    "description": "TaskUnifier - Task Management Application",
    "author": "BL-IT",
    "version": "1.2.1",
    "private": true,
    "main": "public/electron.js",
    "homepage": "./",
    "scripts": {
        "react:start": "craco start",
        "electron:start": "electron .",
        "start": "REACT_APP_GIT_COMMIT_HASH=$(git rev-parse --short HEAD) craco --max_old_space_size=4096 start",
        "build": "REACT_APP_GIT_COMMIT_HASH=$(git rev-parse --short HEAD) craco --max_old_space_size=4096 build",
        "build:amplify": "REACT_APP_GIT_COMMIT_HASH=$(git rev-parse --short HEAD) craco --max_old_space_size=4096 build",
        "build:github": "craco --max_old_space_size=4096 build",
        "lint": "eslint public src",
        "test": "craco test",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --x64 --mac --win --linux --c.extraMetadata.main=build/electron.js -p never"
    },
    "dependencies": {
        "@aws-amplify/datastore": "^2.2.4",
        "@craco/craco": "^5.6.4",
        "@fortawesome/fontawesome-svg-core": "^1.2.29",
        "@fortawesome/free-solid-svg-icons": "^5.13.1",
        "@fortawesome/react-fontawesome": "^0.1.11",
        "antd": "^4.4.0",
        "aws-amplify": "^3.0.18",
        "axios": "^0.19.2",
        "craco-antd": "^1.18.1",
        "electron-is-dev": "^1.2.0",
        "electron-log": "^4.2.2",
        "electron-updater": "^4.3.1",
        "fs-extra": "^9.0.1",
        "googleapis": "^52.1.0",
        "https-proxy-agent": "^5.0.0",
        "inputmask-core": "^2.2.0",
        "jspdf": "^1.5.3",
        "jspdf-autotable": "^3.5.6",
        "jszip": "^3.5.0",
        "lodash": "^4.17.19",
        "moment": "^2.27.0",
        "mousetrap": "^1.6.5",
        "qs": "^6.9.4",
        "react": "^16.13.1",
        "react-big-calendar": "^0.26.0",
        "react-color": "^2.18.1",
        "react-dnd": "^11.1.3",
        "react-dnd-html5-backend": "^11.1.3",
        "react-dom": "^16.13.1",
        "react-draggable": "^4.4.3",
        "react-joyride": "^2.2.1",
        "react-redux": "^7.2.0",
        "react-responsive": "^8.1.0",
        "react-rte": "^0.16.1",
        "react-scripts": "3.4.1",
        "react-split-pane": "^0.1.91",
        "react-stripe-elements": "^6.1.2",
        "react-virtualized": "^9.21.2",
        "reduce-reducers": "^1.0.4",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "redux-undo": "^1.0.1",
        "reselect": "^4.0.0",
        "rrule": "^2.6.4",
        "uuid": "^8.2.0"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "babel-jest": "^26.1.0",
        "electron": "^9.0.5",
        "electron-builder": "^22.7.0",
        "electron-devtools-installer": "^3.1.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "enzyme-to-json": "^3.5.0",
        "eslint": "^7.4.0",
        "eslint-plugin-react": "^7.20.3",
        "eslint-plugin-react-hooks": "^4.0.5",
        "husky": "^4.2.5",
        "react-test-renderer": "^16.13.1",
        "typescript": "^3.9.6",
        "worker-loader": "^2.0.0"
    },
    "build": {
        "appId": "com.bl-it.taskunifier",
        "compression": "normal",
        "productName": "TaskUnifier",
        "directories": {
            "buildResources": "build",
            "output": "dist"
        },
        "protocols": [
            {
                "name": "TaskUnifier",
                "role": "Viewer",
                "schemes": [
                    "tu",
                    "taskunifier"
                ]
            }
        ],
        "mac": {
            "icon": "assets/icon.icns",
            "type": "distribution",
            "target": [
                "dmg",
                "zip"
            ],
            "publish": {
                "provider": "github"
            },
            "category": "public.app-category.productivity"
        },
        "win": {
            "icon": "assets/icon.ico",
            "target": [
                "portable",
                "nsis"
            ],
            "publish": {
                "provider": "github"
            },
            "publisherName": "BL-IT"
        },
        "linux": {
            "icon": "assets/icon.png",
            "target": [
                "tar.gz",
                "snap",
                "AppImage"
            ],
            "publish": {
                "provider": "github"
            },
            "description": "TaskUnifier - Task Management Application",
            "category": "Office;ProjectManagement"
        }
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "yarn run lint"
        }
    },
    "jest": {
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}